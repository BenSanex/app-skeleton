<div id="user-header">

 <div id="user-buttons">
    <% if logged_in? %>
      <a href="/users/<%= current_user.id %>/profile"><%= current_user.display_name %></a>
      <a href="/users/logout">logout</a>
      <a href="/">home</a>
    <% else %>
      <a href="/users/signup">sign up</a>
      <a href="/users/login">login</a>
      <a href="/">home</a>
    <% end %>
  </div>

</div>
