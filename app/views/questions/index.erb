
<div>
  <h1 class='subheader'>All Questions</h1>
  <div class='question'>
    <% @questions.each do |question| %>
    <div class='votes'>
      <span class="points"><%= question.points %></span>
      <p class='small-text'>votes</p>
    </div>
    <div class='answers'>
      <span class='answer-count'><%= question.answers.count %></span>
      <p class='small-text'>answers</p>
    </div>
    <span class="question-title"><a href="/questions/<%= question.id %>"><%= question.title %></a></span>
    <div>
      <p class='small-text author'>asked by: <%= question.author.try(:display_name) || "Anonymous" %></p>
    </div>
    <div class='question-tags'>
      <ul>
        <% question.tags.each do |tag| %>
          <li> test<%= tag.name %></li>
        <% end %>
      </ul>
    </div>
      <hr>
      <% end %>
  </div>
</div>


